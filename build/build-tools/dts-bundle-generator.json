  "entries": [
    {
      "filePath": "./src/index.ts",
      "outFile": "./dist/index.d.ts",
      "failOnClass": false,
      "noCheck": false,
      "libraries": {
        "allowedTypesLibraries": [],
        "importedLibraries": ["rollup", "node", "os", "net", "tty", "url", "fs", "path", "util", "svelte", "svelte-preprocess"]
      },
      "output": {
        "inlineDeclareGlobals": true,
        "inlineDeclareExternals": true,
        "sortNodes": false
      }
    }
  ]
}
